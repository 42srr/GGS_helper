# Application Environment
NODE_ENV=development
PORT=3001

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=erp42

# JWT Configuration
# Generate a secure secret: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=1d

# 42 OAuth Configuration
# Get these from: https://profile.intra.42.fr/ -> API -> Register a new app
FORTYTWO_CLIENT_ID=your_42_oauth_client_id_here
FORTYTWO_CLIENT_SECRET=your_42_oauth_client_secret_here
FORTYTWO_CALLBACK_URL=http://localhost:3001/auth/42/callback

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:5173

# 42 API Configuration (for fetching user data)
# Use the same credentials as OAuth or create a separate API app
FORTYTWO_API_URL=https://api.intra.42.fr
FORTYTWO_API_UID=your_42_api_uid_here
FORTYTWO_API_SECRET=your_42_api_secret_here

# Logging
LOG_LEVEL=debug

# File Upload
MAX_FILE_SIZE=20971520  # 20MB in bytes

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3001
CORS_CREDENTIALS=true

# Email Configuration (Optional - for future features)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# EMAIL_FROM=noreply@42erp.com

# Redis Configuration (Optional - for caching)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# Backup Configuration
BACKUP_PATH=./backups
BACKUP_RETENTION_DAYS=30

# Docker PostgreSQL Configuration
POSTGRES_DB=erp42
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres